{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "style": "warn",
    "nursery": "warn",
    "pedantic": "warn",
    "perf": "warn",
    "restriction": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".astro/",
    ".turbo/",
    ".next/",
    ".nuxt/",
    ".output/",
    "coverage/",
    "**/.vercel/**",
    "**/dist/**",
    "**/build/**",
    "**/.astro/**",
    "**/.turbo/**",
    "**/.next/**",
    "**/.nuxt/**",
    "**/.output/**",
    "**/coverage/**"
  ]
}
