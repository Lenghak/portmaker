{
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "always",
    "source.organizeLinkDefinitions": "always",
    "source.sortImports": "always",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.classFunctions": ["cva", "cn", "twMerge"],
  "typescript.preferences.autoImportSpecifierExcludeRegexes": ["^(node:)?os$"],
  "terminal.integrated.profiles.osx": {
    "zsh with nvm": {
      "path": "/bin/zsh",
      "args": [
        "-c",
        "if [ -f ~/.nvm/nvm.sh ]; then source ~/.nvm/nvm.sh && nvm use; fi; exec /bin/zsh"
      ]
    },
    "bash with nvm": {
      "path": "/bin/bash",
      "args": ["-c", "source ~/.nvm/nvm.sh && nvm use && exec /bin/bash"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh with nvm",
  "terminal.integrated.profiles.linux": {
    "bash with nvm": {
      "path": "/bin/bash",
      "args": ["-c", "source ~/.nvm/nvm.sh && nvm use && exec /bin/bash"]
    },
    "zsh with nvm": {
      "path": "/bin/zsh",
      "args": [
        "-c",
        "if [ -f ~/.nvm/nvm.sh ]; then source ~/.nvm/nvm.sh && nvm use; fi; exec /bin/zsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash with nvm",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnPaste": true,
  "emmet.showExpandedAbbreviation": "never"
}
