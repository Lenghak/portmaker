{
  "[astro]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "never",
      "source.organizeImports": "always",
      "source.organizeImports.biome": "never"
    },
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeLinkDefinitions": "always",
    "source.sortImports": "always",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "tailwindcss",
    "*.dbclient-js": "javascript",
    "*.ndjson": "jsonl",
    "*.sqlbook": "sql"
  },
  "tailwindCSS.classFunctions": ["cva", "cn", "twMerge"],
  "typescript.preferences.autoImportSpecifierExcludeRegexes": ["^(node:)?os$"],
  "terminal.integrated.profiles.osx": {
    "zsh with nvm": {
      "path": "/bin/zsh",
      "args": [
        "-c",
        "if [ -f ~/.nvm/nvm.sh ]; then source ~/.nvm/nvm.sh && nvm use; fi; exec /bin/zsh"
      ]
    },
    "bash with nvm": {
      "path": "/bin/bash",
      "args": ["-c", "source ~/.nvm/nvm.sh && nvm use && exec /bin/bash"]
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh with nvm",
  "terminal.integrated.profiles.linux": {
    "bash with nvm": {
      "path": "/bin/bash",
      "args": ["-c", "source ~/.nvm/nvm.sh && nvm use && exec /bin/bash"]
    },
    "zsh with nvm": {
      "path": "/bin/zsh",
      "args": [
        "-c",
        "if [ -f ~/.nvm/nvm.sh ]; then source ~/.nvm/nvm.sh && nvm use; fi; exec /bin/zsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash with nvm",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[graphql]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnPaste": true,
  "emmet.showExpandedAbbreviation": "never"
}
