{
  "extends": ["./base.json"],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["vite/client", "solid-js"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["dist", "node_modules", "build", "**/*.test.*", "**/*.spec.*"]
}
